
{% assign full_url = request.host | append: request.path %}

{% if block.settings.show_translate == true %}
<div id="google_translate_element" style="position: fixed; bottom: 0; left: 0; background-color: #010100; padding: 10px; border-top-right-radius: 10px;">
    {% comment %} {{ "thumbs-up.png" | asset_url | img_tag }} {% endcomment %}
    <script type="text/javascript">
      function googleTranslateElementInit() {
        new google.translate.TranslateElement({pageLanguage: 'en'}, 'google_translate_element');
      }
      </script>
      
      <script type="text/javascript" src="//translate.google.com/translate_a/element.js?cb=googleTranslateElementInit"></script>
    
</div>
{% endif %}

{% schema %}
{
  "name": "Translate App by Mumin",
  "target": "body",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_translate",
      "label": "Show Translate block"
    }
  ]
}
{% endschema %}
